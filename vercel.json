{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "server/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "app/public/index.html"
    }
  ]
}
